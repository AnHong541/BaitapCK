/* Hamburger menu toggle button */
.hamburger-menu {
	display: none;
	flex-direction: column;
	gap: 5px;
	cursor: pointer;
	background: none;
	border: none;
	padding: 0.5rem;
	color: #fff;
	font-size: 1.5rem;
	z-index: 1001;
}

.hamburger-menu span {
	width: 24px;
	height: 2px;
	background: #fff;
	transition: all 0.3s ease;
	display: block;
}

.hamburger-menu.active span:nth-child(1) {
	transform: rotate(45deg) translate(8px, 8px);
}

.hamburger-menu.active span:nth-child(2) {
	opacity: 0;
}

.hamburger-menu.active span:nth-child(3) {
	transform: rotate(-45deg) translate(7px, -7px);
}

@media (max-width: 576px) {
	.hamburger-menu {
		display: flex;
		order: 1;
		margin-right: 0.5rem;
	}
  
	nav {
		position: fixed;
		top: 70px;
		left: 0;
		right: 0;
		background: #0099cc;
		flex-direction: column !important;
		align-items: stretch !important;
		padding: 0 !important;
		max-height: 0;
		overflow: hidden;
		transition: max-height 0.3s ease;
		z-index: 999;
	}
  
	nav.active {
		max-height: 300px;
	}
  
	nav ul {
		flex-direction: column !important;
		gap: 0 !important;
	}
  
	nav ul li {
		border-bottom: 1px solid rgba(255,255,255,0.2);
	}
  
	nav ul li a {
		display: block;
		padding: 0.8rem 1rem !important;
		color: #fff !important;
	}
}
