/* ---------- Styles extracted from Trangchu.html ---------- */
/* Reset and base */
* {
	margin: 0;
	padding: 0;
	box-sizing: border-box;
}
body {
	font-family: 'Roboto', sans-serif;
	line-height: 1.6;
	color: #333;
	background-color: #f8f9fa;
}
a { text-decoration: none; color: inherit; }
ul { list-style: none; }

/* Header (page-specific tweaks) */
.header-container { max-width: 100%; margin: 0; display: flex; justify-content: flex-start; align-items: center; padding: 1rem 2vw; }
.logo { font-size: 1.8rem; font-weight: 700; }
nav ul { display: flex; gap: 2rem; }
nav ul li a { font-weight: 400; transition: color 0.3s; }
nav ul li a:hover { color: #007bff; }
.cart-icon { position: relative; font-size: 1.2rem; margin-left: 3rem; cursor: pointer; }
.cart-icon::after { content: attr(data-count); position: absolute; top: -8px; right: -8px; background: #ff0000; color: white; border-radius: 50%; width: 18px; height: 18px; font-size: 0.8rem; display: flex; align-items: center; justify-content: center; }

/* Search bar styles */
.search-bar {
	position: relative;
	margin-right: 2rem;
	min-width: 260px;
	flex: 0 0 260px;
}
.search-bar input[type="text"] {
	width: 100%;
	padding: 8px 12px;
	border: 1px solid #ddd;
	border-radius: 6px;
	font-size: 1rem;
	outline: none;
	transition: border-color 0.2s;
}
.search-bar input[type="text"]:focus {
	border-color: #007bff;
}
.search-results {
	position: absolute;
	top: 110%;
	left: 0;
	width: 100%;
	background: #fff;
	border: 1px solid #ddd;
	border-radius: 0 0 8px 8px;
	box-shadow: 0 4px 16px rgba(0,0,0,0.08);
	z-index: 1001;
	max-height: 320px;
	overflow-y: auto;
}
.search-result-item {
	display: flex;
	align-items: center;
	gap: 0.5rem;
	padding: 8px 12px;
	cursor: pointer;
	border-bottom: 1px solid #f0f0f0;
	transition: background 0.2s;
}
.search-result-item:last-child {
	border-bottom: none;
}
.search-result-item:hover {
	background: #e3f2fd;
}

/* Hero Banner (now uses layered slides) */
.hero {
	position: relative;
	height: 800px;
	display: flex;
	align-items: center;
	justify-content: center;
	text-align: center;
	color: white;
	margin-top: 70px;
	overflow: hidden;
}

/* slide layers that fill the hero area */
.hero-slides {
	position: absolute;
	inset: 0; /* top/right/bottom/left:0 */
	z-index: 0;
}
.hero-slide {
	position: absolute;
	inset: 0;
	background-position: center;
	background-size: cover;
	background-repeat: no-repeat;
	opacity: 0;
	transition: opacity 1s ease-in-out;
	will-change: opacity;
}
.hero-slide.active { opacity: 1; }

/* gentle dark gradient overlay to keep text readable */
.hero::before {
	content: ''; 
	position: absolute;
	inset: 0;
	background: linear-gradient(rgba(0,123,255,0.55), rgba(0,123,255,0.15));
	z-index: 1;
	pointer-events: none;
}

.hero-content { position: relative; z-index: 2; }
.hero-content h1 { font-size: 3rem; margin-bottom: 1rem; }
.hero-content p { font-size: 1.2rem; margin-bottom: 2rem; }
.btn { background-color: #fff; color: #007bff; padding: 12px 30px; border-radius: 5px; font-weight: 700; transition: background-color 0.3s; margin-top: 1.2rem; }
.btn:hover { background-color: #e9ecef; }

/* Main Content */
main { max-width: 1200px; margin: 3rem auto; padding: 0 1rem; }

/* Categories */
.categories { display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 2rem; margin-bottom: 3rem; }
.category-card { background: white; border-radius: 10px; overflow: hidden; box-shadow: 0 4px 8px rgba(0,0,0,0.1); transition: transform 0.3s; }
.category-card:hover { transform: translateY(-5px); }
.category-card img { width: 100%; height: 200px; object-fit: cover; }
/* Consistent category image sizing for homepage */
.category-img {
	width: 120px;
	height: 90px;
	object-fit: contain;
	display: block;
	margin: 0 auto 1rem auto;
	background: #fff;
	border-radius: 8px;
	box-shadow: 0 2px 8px rgba(0,0,0,0.04);
}
.category-card h3 { padding: 1rem; text-align: center; color: #007bff; }

/* Featured products */
.featured { margin-bottom: 5rem; }
.featured h2 { text-align: center; margin-bottom: 2rem; font-size: 2rem; }
.products-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 2rem; align-items: stretch; }
.product-card { background: white; border-radius: 10px; overflow: hidden; box-shadow: 0 4px 8px rgba(0,0,0,0.1); transition: transform 0.3s; display: flex; flex-direction: column; height: 100%; }
.product-card:hover { transform: translateY(-5px); }
.product-card img { width: 100%; height: 250px; object-fit: cover; flex: 0 0 auto; display:block; }
.product-info { padding: 1rem; display: flex; flex-direction: column; align-items: flex-start; text-align: left; flex: 1 1 auto; justify-content: space-between; }
.product-info h3 { margin-bottom: 0.5rem; }
.product-price { font-size: 1.2rem; color: #007bff; font-weight: 700; }
.product-old-price { text-decoration: line-through; color: #999; margin-left: 0.5rem; }

/* Style the add-to-cart button inside product cards: centered and blue background */
.product-info .btn {
	align-self: center; /* center horizontally within the column layout */
	background-color: #007bff !important;
	color: #fff !important;
	border: none;
	padding: 10px 18px;
	border-radius: 6px;
	font-weight: 700;
	margin-top: 8px;
}
.product-info .btn:hover {
	background-color: #0056b3 !important;
	color: #fff !important;
}

/* Footer tweaks */
footer { background-color: #333; color: white; text-align: center; padding: 2rem 1rem; }
.footer-content { max-width: 1200px; margin: 0 auto; display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 2rem; margin-bottom: 1rem; }
.footer-section h4 { margin-bottom: 1rem; color: #007bff; }
.footer-section ul li { margin-bottom: 0.5rem; }

/* Responsive adjustments */
@media (max-width: 768px) {
	.header-container { flex-direction: column; gap: 1rem; }
	nav ul { flex-direction: column; gap: 1rem; }
	.hero-content h1 { font-size: 2rem; }
	.categories, .products-grid { grid-template-columns: 1fr; }
}

