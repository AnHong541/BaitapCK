/* Add standard appearance property for compatibility */
input[type="number"] { appearance: textfield; }

/* Sticky footer for pages that need the footer pinned to the viewport bottom
   without affecting other pages. Use by adding `class="with-sticky-footer"`
   to the page <body> element. */
.with-sticky-footer {
	min-height: 100vh;
	display: flex;
	flex-direction: column;
}
.with-sticky-footer main {
	flex: 1 0 auto;
}
.with-sticky-footer footer {
	flex-shrink: 0;
}

/* Scoped styles for cart / checkout totals and action buttons on pages
   that use the .with-sticky-footer body class (Giohangf.html and ThanhToan.html) */
.with-sticky-footer .cart-total,
.with-sticky-footer .checkout-total {
	text-align: right;
	margin-top: 24px;
	font-size: 1.25rem;
	font-weight: 700;
	color: #222;
}
.with-sticky-footer .cart-actions,
.with-sticky-footer .checkout-actions {
	display: flex;
	gap: 16px;
	justify-content: flex-end;
	margin-top: 18px;
	align-items: center;
}
.with-sticky-footer .cart-actions .btn,
.with-sticky-footer .checkout-actions .btn {
	padding: 14px 22px;
	font-size: 1rem;
	border-radius: 8px;
}
.with-sticky-footer .btn-primary { background:#007bff; color:#fff; border:none; }
.with-sticky-footer .btn-secondary { background:#6c757d; color:#fff; border:none; }

@media (max-width: 768px) {
