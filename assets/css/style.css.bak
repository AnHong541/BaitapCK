	.with-sticky-footer .checkout-total { text-align: center; font-size: 1.1rem; }
	.with-sticky-footer .cart-actions,
	.with-sticky-footer .checkout-actions { justify-content: center; gap: 12px; flex-wrap:wrap; }
}

