/* Remove native number input spinner controls (up/down) used in quantity controls */
input[type="number"]::-webkit-outer-spin-button,
input[type="number"]::-webkit-inner-spin-button {
    -webkit-appearance: none;
    margin: 0;
}
input[type="number"] {
    -moz-appearance: textfield; /* Firefox */
}

/* Floating contact button (fixed to corner) */
.floating-contact {
	position: fixed;
	right: 24px;
	bottom: 24px;
	width: 56px;
	height: 56px;
	border-radius: 50%;
	background: #00a6a6;
	display: flex;
	align-items: center;
	justify-content: center;
	box-shadow: 0 8px 24px rgba(0,0,0,0.18);
	z-index: 2200;
	text-decoration: none;
}
.floating-contact svg { width: 26px; height: 26px; display:block; }
.floating-contact:focus, .floating-contact:hover { transform: translateY(-3px); transition: transform 0.18s ease; }

